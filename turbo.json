{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["VITE_BACKEND_URL"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "storybook-static/**"
      ]
    },
    "main#build": {
      "dependsOn": ["^build", "$DOCS_URL"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "host#build": {
      "dependsOn": ["@experiment/messaging-app#build", "@experiment/collaboration-app#build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "start": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
